<!DOCTYPE html>
<html>
<head>
    <link rel="stylesheet" type="text/css" href="~/Content/DefaultStyles.css" />
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Groupify</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    <link rel="stylesheet" type="text/css" href="~/Content/bootstrap-select.css" />
    <link rel="stylesheet" type="text/css" href="~/Content/clusterize.css" />
</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("Groupify", "Index", "Home", new { area = "" }, new { @class = "navbar-brand", style = "color:#5cb85c" })
            </div>
        </div>
    </div>
        <div class="container body-content" id="main">
            @RenderBody()
        </div>
    <style type="text/css">
        #main {
            overflow: auto;
        }
        .footer {
            position: relative;
            margin-top: -150px;
            height: 150px;
            clear:both;
            padding-top:20px;
        }
    </style>
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    <script type="text/javascript" src="~/Scripts/clusterize.js"></script>
    <script type="text/javascript" src="~/Scripts/bootstrap-select.js"></script>
    @RenderSection("scripts", required: false)
</body>
</html>
